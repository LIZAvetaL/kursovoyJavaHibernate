<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Server.Model.ProductEntity" table="product" schema="shop">
        <id name="idproduct">
            <column name="idproduct" sql-type="int"/>
        </id>
        <property name="type">
            <column name="type" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="nameproduct">
            <column name="nameproduct" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="amount">
            <column name="amount" sql-type="int"/>
        </property>
        <property name="price">
            <column name="price" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>